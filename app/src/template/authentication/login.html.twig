<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/style.css">
    <title>MyHelpdesk</title>
    <style>
        .display-message {
            display: flex;
            align-content: center;
            align-items: center;
            justify-content: center;
            font-size: 0.9em;
            color:white;
            width: 50%;
            height: 2rem;
            text-align: center;
        }
        .alert-danger {
            background: red;
        }
        .alert-success {
            background: green;
        }
    </style>
</head>
<body class="login-body">
    <div class="logo-wrapper">
        <img src="/images/mary.svg" class="logo-mary" alt="logo de l'entreprise Mary">

        {% if success_message %}
            <div class="display-message alert alert-success" role="alert">
                <span>{{ success_message | raw }}</span>
            </div>
        {% endif %}
        {% if error_message %}
            <div class="display-message alert alert-danger" role="alert">
                <span> {{ error_message }}</span>
            </div>
        {% endif %}


        <form class="wrapper-login-form" action="/login" method="POST">
            <h3 class="form-title">Connectez-vous à votre compte</h3>
            <div class="group-form-input">
                <label for="email">Email utilisateur</label>
                <input type="text" id="email" name="email">
            </div>
            <div class="group-form-input">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password">
            </div>
            <div class="wrapper-signup-link">
                <a href="signup">Première connexion? Créez votre compte</a>
            </div>
            <div class="group-form-input">
                <button type="submit" class="login-btn">Connexion</button>
            </div>
        </form>
    </div>
</body>
